{
  "include": ["src", "../types"],
  "exclude": ["node_modules", "dist", "test"],
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "lib": ["ESNext"],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["@cloudflare/workers-types"],
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {},
    "skipLibCheck": true
  }
}
